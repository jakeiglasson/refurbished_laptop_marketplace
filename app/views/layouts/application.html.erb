<!DOCTYPE html>
<html>
  <head>
    <title>BootstrapTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_or_guest_user.admin == false%>
      <%= render "layouts/user_nav" %>
    <% else %>
      <%= render "layouts/admin_nav" %>
    <% end %>

    <% if user_signed_in? %>
      <%= "Hello! ID: #{current_or_guest_user.id}, NAME: #{current_or_guest_user.name}, EMAIL: #{current_or_guest_user.email}, SELLER STATUS: #{current_or_guest_user.seller}, ADMIN: #{current_or_guest_user.admin} " %>
    <% end %> 

    

    <%= render "layouts/alerts" %>

    <%= yield %>

  </body>
</html>