<p id="notice"><%= notice %></p>

<h1>Laptop Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laptop_brands.each do |laptop_brand| %>
      <tr>
        <td><%= laptop_brand.name %></td>
        <td><%= link_to 'Show', laptop_brand %></td>
        <td><%= link_to 'Edit', edit_laptop_brand_path(laptop_brand) %></td>
        <td><%= link_to 'Destroy', laptop_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Laptop Brand', new_laptop_brand_path %>
