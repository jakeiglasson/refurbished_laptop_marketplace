<%= form_with(model: laptop, local: true) do |form| %>
  <% if laptop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(laptop.errors.count, "error") %> prohibited this laptop from being saved:</h2>

      <ul>
        <% laptop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :picture %> 
    <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>

  <!-- 
  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select(:user_id, User.where(seller: 'true'), :id, :name, prompt: true) %>
  </div>
  -->

  <div class="field">
    <%= form.label :laptop_brand_id %>
    <%= form.collection_select(:laptop_brand_id, LaptopBrand.all, :id, :name, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :grade_id %>
    <%= form.collection_select(:grade_id, Grade.all, :id, :name, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :cpu_id %>
    <%= form.collection_select(:cpu_id, Cpu.all, :id, :name, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :ram_id %>
    <%= form.collection_select(:ram_id, Ram.all, :id, :name, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :hard_drive_id %>
    <%= form.collection_select(:hard_drive_id, HardDrive.all, :id, :name, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <!-- <div class="field">
    <%= form.label :sold_status %>
    <%= form.number_field :sold_status %>
  </div> -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
