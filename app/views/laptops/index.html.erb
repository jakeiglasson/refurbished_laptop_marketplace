<p id="notice"><%= notice %></p>

<h1>Laptops</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>ID</th>
      <th>Seller</th>
      <th>Brand</th>
      <th>Grade</th>
      <th>Cpu</th>
      <th>Ram</th>
      <th>Hard drive</th>
      <th>Model</th>
      <th>Price</th>
      <th>Sold Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laptops.each do |laptop| %>
      <tr>
        <td>
          <% if laptop.picture.attached? %>
            <%= image_tag laptop.picture %>
          <% end %>             
        </td>
        <td><%= laptop.id %></td>
        <td><%= User.find(laptop.user_id).name %></td>
        <td><%= LaptopBrand.find(laptop.brand_id).name %></td>
        <td><%= Grade.find(laptop.grade_id).name %></td>
        <td><%= Cpu.find(laptop.cpu_id).name %></td>
        <td><%= Ram.find(laptop.ram_id).name %></td>
        <td><%= HardDrive.find(laptop.hard_drive_id).name %></td>
        <td><%= laptop.model %></td>
        <td><%= laptop.price %></td>
        <td><%= laptop.sold_status %></td>
        <td><%= link_to 'Show', laptop %></td>
        <td><%= link_to 'Edit', edit_laptop_path(laptop) %></td>
        <td><%= link_to 'Destroy', laptop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

