

<h1>LAPTOPS</h1>

<% if current_or_guest_user.guest == false%>
  <% if current_user.seller == "true" %>
    <%= link_to 'New Laptop', new_laptop_path %>
  <% end %>
<% end %>

<h2>AVAILABLE</h2>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>ID</th>
      <th>Seller</th>
      <th>Brand</th>
      <th>Grade</th>
      <th>Cpu</th>
      <th>Ram</th>
      <th>Hard drive</th>
      <th>Model</th>
      <th>Price</th>
      <th>Sold Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unsold_laptops.each do |laptop| %>
      <tr>
        <td>
          <% if laptop.picture.attached? %>
            <%= image_tag laptop.picture, class: "laptop-image" %>
          <% else %>
            <div class="laptop-backup-image"></div>
          <% end %>
        </td>
        <td><%= laptop.id %></td>
        <td><%= laptop.user.name %></td>
        <td><%= laptop.laptop_brand.name %></td>
        <td><%= laptop.grade.name %></td>
        <td><%= laptop.cpu.name %></td>
        <td><%= laptop.ram.name %></td>
        <td><%= laptop.hard_drive.name %></td>
        <td><%= laptop.model %></td>
        <td><%= laptop.price %></td>
        <td><%= laptop.sold_status %></td>
        <td><%= link_to 'Show', laptop %></td>

        <% if current_or_guest_user.id == laptop.user_id%>
          <td><%= link_to 'Edit', edit_laptop_path(laptop) %></td>
          <td>
            <%= link_to 'Remove', laptop, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        <% else %>
          <td><%= link_to 'BUY', laptop_orders_path(laptop_id: laptop.id, user_id: current_or_guest_user.id), method: :post%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

